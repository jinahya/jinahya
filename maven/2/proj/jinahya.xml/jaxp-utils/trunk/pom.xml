      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>
  <organization/>
  <developers>
    <developer>
      <id>jinahya</id>
      <name>Jin Kwon</name>
      <email>jinahya@gmail.com</email>
    </developer>
  </developers>
  <contributors/>

  <!-- Environment Settings -->
  <issueManagement/>
  <ciManagement/>
  <mailingLists/>
  <scm>
  </scm>
  <prerequisites/>
  <repositories/>
  <pluginRepositories/>
  <distributionManagement>
    <repository>
      <id>jinahya.googlecode.com_svn_maven_2_repo</id>
      <url>https://jinahya.googlecode.com/svn/maven/2/repo</url>
    </repository>
    <site>
      <id>jinahya.googlecode.com_svn_maven_2_site</id>
      <url>https://jinahya.googlecode.com/svn/maven/2/site</url>
    </site>
  </distributionManagement>
  <profiles/>
</project>
