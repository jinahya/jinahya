<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>jinahya.howto</groupId>
  <artifactId>maven-antrun-proguard</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>maven-antrun-proguard</name>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  <build>
    <plugins>
      <plugin>
        <inherited>true</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>print_properties</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <property name="compile_classpath" refid="maven.compile.classpath"/>
                <property name="runtime_classpath" refid="maven.runtime.classpath"/>
                <property name="test_classpath" refid="maven.test.classpath"/>
                <property name="plugin_classpath" refid="maven.plugin.classpath"/>

                <echo message="compile classpath: ${compile_classpath}"/>
                <echo message="runtime classpath: ${runtime_classpath}"/>
                <echo message="test classpath:    ${test_classpath}"/>
                <echo message="plugin classpath:  ${plugin_classpath}"/>

                <echo message="-------------------------------- Build in properties"/>
                <echo message="basedir: ${basedir}"/>
                <echo message="version: ${version}"/>

                <echo message="----------------------------- Pom/Project properties"/>
                <echo message="project.build.directory: ${project.build.directory}"/>
                <echo message="project.build.outputDiretory: ${project.build.outputDirectory}"/>
                <echo message="project.name: ${project.name}"/>
                <echo message=" - pom.name: ${pom.name}"/>
                <echo message="project.version: ${project.version}"/>
                <echo message=" - pom.version: ${pom.version}"/>
                <echo message="project.build.finalName: ${project.build.finalName}"/>

                <echo message="-------------------------------- Local user settings"/>
                <echo message="setting.localRepository: ${settings.localRepository}"/>
                <echo message="maven.repo.local: ${maven.repo.local}"/>

                <echo message="------------------------------- Environment variables"/>
                <echo message="env.M2_HOME: ${env.M2_HOME}"/>
                <echo message="java.home: ${java.home}"/>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>

          <execution>
            <id>proguard</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <taskdef resource="proguard/ant/task.properties"/>
                <!--
                <taskdef resource="proguard/ant/task.properties"
                         classpathref="maven.plugin.classpath"/>
                -->
                <proguard>
                  <libraryjar file="${java.home}/../Clases/classes.jar"/>
                  <injar file="${project.outputDirectory}/${project.build.finalName}.${project.packaging}"/>
                  <outjar file="${project.outputDirectory}/${project.build.finalName}-deploy.${project.packaging}"/>
                  <keep access="public" name="*"/>
                </proguard>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <phase>package</phase>
          </execution>
        </executions>

        <dependencies>
          <dependency>
            <groupId>net.sf.proguard</groupId>
            <artifactId>proguard</artifactId>
            <version>4.4</version>
          </dependency>
        </dependencies>

      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <links>
            <link>http://java.sun.com/javase/6/docs/api/</link>
          </links>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <linkXref>true</linkXref>
          <targetJdk>1.3</targetJdk>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.4</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.3</version>
      </plugin>
    </plugins>
  </reporting>
</project>
